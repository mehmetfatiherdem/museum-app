          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "require": true,
                    "example": "barney.stinson@domain.com"
                  },
                  "password": {
                    "type": "string",
                    "required": true,
                    "example": "secretPassword1337!"
                  }
                }
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Login admin",
            "schema": {
              "$ref": "#/components/schemas/user"
